        <record id="product_template_only_form_view_sellers" model="ir.ui.view">
            <field name="name">product.template.form.sellers</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="seller_ids" position="attributes">
                    <attribute name="context">{'visible_product_tmpl_id':True, 'visible_product_id': False}</attribute>                                  
                </field>
            </field>
        </record>

        <record id="product_normal_form_view_sellers" model="ir.ui.view">
            <field name="name">product.product.form.sellers</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="product_tmpl_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="seller_ids" position="attributes">
                    <attribute name="context">{'default_product_tmpl_id':product_tmpl_id, 'default_product_id':active_id}</attribute>
                    <attribute name="context">{'visible_product_tmpl_id':True, 'visible_product_id': True}</attribute>               
                </field>
            </field>
        </record>
        
        <record id="product_supplierinfo_tree_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.tree.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_code" />
                </field>
                <field name="product_tmpl_id" position="after">
                    <field name="product_id" string="Product Variant" invisible="context.get('visible_product_id', True)"/>
                </field>
            </field>
        </record>
        
        <record id="product_supplierinfo_type_action_variant" model="ir.actions.act_window">
            <field name="inherit_id" ref="product.product_supplierinfo_type_action"></field>
            <field name="name">Supplier Pricelist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.supplierinfo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'visible_product_tmpl_id':False, 'visible_product_id':False}</field>        
        </record>
